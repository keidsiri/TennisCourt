@{
  Layout = "_Layout";
}

@model TennisCourt.Models.Player

<h4>Add a new player</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new {required="required"})

  @Html.Label("Choose home court")
  @Html.DropDownList("CourtId")

  @Html.LabelFor(model => model.Age)
  @Html.TextBoxFor(model => model.Age)

  @Html.LabelFor(model => model.Gender)
  @Html.TextBoxFor(model => model.Gender)

    @Html.LabelFor(model => model.Location)
  @Html.TextBoxFor(model => model.Location)

  <input type="submit" value="Add new player" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all players", "Index")</p>