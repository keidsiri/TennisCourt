@{
  Layout = "_Layout";
}

@model TennisCourt.Models.Court

<h2>Edit</h2>

<h4>Edit this court: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.CourtId)

  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.LabelFor(model => model.Location)
  @Html.TextBoxFor(model => model.Location)

  @Html.LabelFor(model => model.SurfaceType)
  @Html.TextBoxFor(model => model.SurfaceType)

  @Html.LabelFor(model => model.Public)
  @Html.CheckBoxFor(model => model.Public)

  @Html.LabelFor(model => model.Private)
  @Html.CheckBoxFor(model => model.Private)

  <input type="submit" value="Save" class="btn btn-dark" />
}

<p>@Html.ActionLink("Back to court list", "Index")</p>