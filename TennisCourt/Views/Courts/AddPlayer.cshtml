@{
  Layout = "_Layout";
}

@model TennisCourt.Models.Court

<h2>Add a player</h2>

<h4>Add a player to this court: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.CourtId)

    @Html.Label("Select player")
    @Html.DropDownList("PlayerId")

    <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to court list", "Index")</p>