@{
  Layout = "_Layout";
}

@using TennisCourt.Models;
@model List<TennisCourt.Models.Court>;

<h1>Courts</h1>

@if (@Model.Count == 0)
{
  <h3>No courts have been added yet!</h3>
}

@foreach (Court court in Model)
{
  <li>@Html.ActionLink($"{court.Name}", "Details", new { id = court.CourtId })</li>
}

<p>@Html.ActionLink("Add new court", "Create")</p>